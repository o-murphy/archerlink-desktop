<MainScreen>:

    MDBoxLayout:
        id: main_layout
        md_bg_color: self.theme_cls.backgroundColor

        orientation: 'horizontal'

        MDBoxLayout:
            id: left_column
            orientation: 'vertical'
            size_hint_y: None
            size_hint_x: None
            height: self.minimum_height
            padding: [0, 0]
            spacing: 10
            pos_hint: {"center_x": .5, "center_y": .5}

            MDFabButton:
                id: folder_btn
                icon: "folder"
                style: "standard"
                theme_bg_color: "Custom"
                md_bg_color: self.theme_cls.surfaceContainerColor
                pos_hint: {"center_x": .5, "center_y": .5}

            MDFabButton:
                id: shot_btn
                icon: "camera"
                style: "standard"
                theme_bg_color: "Custom"
                md_bg_color: self.theme_cls.surfaceContainerColor
                pos_hint: {"center_x": .5, "center_y": .5}

            MDFabButton:
                id: rec_btn
                icon: "record"
                style: "standard"
                theme_bg_color: "Custom"
                md_bg_color: self.theme_cls.surfaceContainerColor
                pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            id: center_column
            orientation: 'vertical'
            size_hint_x: 1

            MDLabel:
                id: placeholder
                text: "Trying to connect..."
                color: "white"
                halign: "center"
                valign: "center"

        MDBoxLayout:
            id: right_column
            orientation: 'vertical'
            size_hint_y: None
            size_hint_x: None
            height: self.minimum_height
            padding: [0, 0]
            spacing: 10
            pos_hint: {"center_x": .5, "center_y": .5}

            MDFabButton:
                id: color_btn
                icon: "palette"
                style: "standard"
                theme_bg_color: "Custom"
                md_bg_color: self.theme_cls.surfaceContainerColor
                pos_hint: {"center_x": .5, "center_y": .5}

            MDFabButton:
                id: agc_btn
                icon: "image"
                style: "standard"
                theme_bg_color: "Custom"
                md_bg_color: self.theme_cls.surfaceContainerColor
                pos_hint: {"center_x": .5, "center_y": .5}

            MDFabButton:
                id: zoom_btn
                icon: "loupe"
                style: "standard"
                theme_bg_color: "Custom"
                md_bg_color: self.theme_cls.surfaceContainerColor
                pos_hint: {"center_x": .5, "center_y": .5}

            MDFabButton:
                id: ffc_btn
                icon: "camera-iris"
                style: "standard"
                theme_bg_color: "Custom"
                md_bg_color: self.theme_cls.surfaceContainerColor
                pos_hint: {"center_x": .5, "center_y": .5}
